{% extends 'admin.html.twig' %}

{% block title %}OpenGaia | Administration{% endblock %}

{% block content %}
<div class="container-fluid">
    {{ include('webapp/page/include/_section_content_header.html.twig') }}
    <section id="op_admin_content_body">
        <div class="row g-2">
            <div class="col-2">
                {{ include('webapp/page/include/_section_content_aside.html.twig') }}
            </div>
            <div class="col-10">
                <div class="card">
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>nom</th>
                                    <th>Slug</th>
                                    <th>State</th>
                                    <th>Tags</th>
                                    <th>PublishAt</th>
                                    <th>PublishEnd</th>
                                    <th>IsPublish</th>
                                    <th>IsMenu</th>
                                    <th>CreateAt</th>
                                    <th>UpdateAt</th>
                                    <th>actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for page in pages %}
                                <tr>
                                    <td>{{ page.id }}</td>
                                    <td>{{ page.name }}</td>
                                    <td>{{ page.slug }}</td>
                                    <td>{{ page.state }}</td>
                                    <td>{{ page.tags ? page.tags|join(', ') : '' }}</td>
                                    <td>{{ page.publishAt ? page.publishAt|date('Y-m-d H:i:s') : '' }}</td>
                                    <td>{{ page.dispublishAt ? page.dispublishAt|date('Y-m-d') : '' }}</td>
                                    <td>
                                        {{ page.isMenu ? '<p class="text-success"><i class="far fa-check-circle"></i></p>' : '<p class="text-danger"><i class="far fa-times-circle"></i></p>' }}
                                    </td>
                                    <td>
                                        {{ page.isPublish ? '<p class="text-success"><i class="far fa-check-circle"></i></p>' : '<p class="text-danger"><i class="far fa-times-circle"></i></p>' }}
                                    </td>
                                    <td>{{ page.createdAt ? page.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                    <td>{{ page.updatedAt ? page.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                    <td>
                                        <a href="{{ path('op_webapp_page_show', {'id': page.id}) }}">show</a>
                                        <a href="{{ path('op_webapp_page_edit', {'id': page.id}) }}">edit</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="13">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


    




{% endblock %}
