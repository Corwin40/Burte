{% extends 'admin.html.twig' %}

{% block title %}OpenGaia | {{ page.title }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {{ include('webapp/page/include/_section_content_header.html.twig') }}
    <section id="op_admin_content_body">
        <div class="row g-2">
            <div class="col-2">
                {{ include('webapp/page/include/_section_content_aside.html.twig') }}
            </div>
            <div class="col-10">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <table class="table">
                                    <tbody>
                                    <tr>
                                        <th>Id</th>
                                        <td>{{ page.id }}<input id="page" type="hidden" value="{{ page.id }}"></td>
                                    </tr>
                                    <tr>
                                        <th>Title</th>
                                        <td>{{ page.title }}</td>
                                    </tr>
                                    <tr>
                                        <th>Slug</th>
                                        <td>{{ page.slug }}</td>
                                    </tr>
                                    <tr>
                                        <th>State</th>
                                        <td>{{ page.state }}</td>
                                    </tr>
                                    <tr>
                                        <th>IsMenu</th>
                                        <td>{{ page.isMenu ? '<p class="text-success"><i class="far fa-check-circle"></i></p>' : '<p class="text-danger"><i class="far fa-times-circle"></i></p>' }}</td>
                                    </tr>
                                    <tr>
                                        <th>MetaKeywords</th>
                                        <td>{{ page.metaKeywords ? page.metaKeywords|join(', ') : '' }}</td>
                                    </tr>
                                    <tr>
                                        <th>MetaDescription</th>
                                        <td>{{ page.metaDescription }}</td>
                                    </tr>
                                    <tr>
                                        <th>Tags</th>
                                        <td>{{ page.tags ? page.tags|join(', ') : '' }}</td>
                                    </tr>
                                    <tr>
                                        <th>PublishAt</th>
                                        <td>{{ page.publishAt ? page.publishAt|date('Y-m-d H:i:s') : '' }}</td>
                                    </tr>
                                    <tr>
                                        <th>PublishEnd</th>
                                        <td>{{ page.dispublishAt ? page.dispublishAt|date('Y-m-d') : '' }}</td>
                                    </tr>
                                    <tr>
                                        <th>CreateAt</th>
                                        <td>{{ page.createdAt ? page.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                    </tr>
                                    <tr>
                                        <th>UpdateAt</th>
                                        <td>{{ page.updatedAt ? page.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-8">
                                {{ render(controller('App\\Controller\\Webapp\\SectionController::byPage', {'page': page.id})) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        // Appel de la fonction d'ajout d'une section
        document.getElementById('btnAddSection').onclick = function(event){
            event.preventDefault();
            const title = document.getElementById('section2_title').value;
            const description = document.getElementById('section2_description').value;
            const attrId = document.getElementById('section2_attrId').value;
            const attrName = document.getElementById('section2_attrName').value;
            const attrClass = document.getElementById('section2_attrClass').value;
            const pages = document.getElementById('page').value;
            const url = this.href;
            console.log(title, description, attrId, attrName, attrClass, pages, url )
            axios
                .post(url, {title:title, description:description, attrId:attrId, attrName:attrName, attrClass:attrClass, pages:pages})
                .then(function (response){
                    console.log(response)
                })
        }
    </script>
{% endblock %}
