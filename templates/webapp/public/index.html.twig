{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block content %}
{% if not sections %}
    <header id="page-title">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h1 class="title">{{ parameter.nameSite }}</h1>
                    <p>Bienvenue sur notre site.<br>Ce dernier est propulsé par le CMS OpenGAIA, développé par OpenPixl sous Symfony.</p>
                </div>
            </div>
        </div>
    </header>
    <section class="container">
        <div class="row">
            <div class="col-6">
                <p class="text-center">
                    <img class="img-fluid" src="{{ asset('images/png/carte_de_visite_recto.png') }}">
                </p>
            </div>
            <div class="col-6"></div>

        </div>
    </section>
{% else %}
    {% for section in sections %}
    <header id="page-title">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h1 class="title">{{ parameter.nameSite }}</h1>
                    <p>Bienvenue sur notre site.<br>Ce dernier est propulsé par le CMS OpenGAIA, développé par OpenPixl sous Symfony.</p>
                </div>
            </div>
        </div>
    </header>
    {% include('webapp/section/include/_onesection.html.twig') %}
    {% endfor %}
{% endif %}
{% endblock %}
