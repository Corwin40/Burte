{{ form_start(form) }}
<div class="card-body">
    <div class="row">
        <div class="row mb-1 mt-1 g-1">
            <div class="col-2">
                {{ form_label(form.name, "Nom de l'évènement", {'label_attr': {'class':'form-label'}}) }}
            </div>
            <div class="col-4">
                {{ form_widget(form.name, {'attr': {'class': 'form-control form-control-sm', 'placeholder':''}}) }}
            </div>
            <div class="col-4">
                <fieldset>
                    <div class="form-check form-switch">
                        {{ form_widget(form.isPublish, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(form.isPublish, "Publier l'évènément ?", {'label_attr': {'class':'form-check-label'}}) }}
                    </div>
                </fieldset>
            </div>


        </div>
        <div class="row mb-1 mt-1 g-1">
            <div class="col-2">
                {{ form_label(form.description, 'Description', {'label_attr': {'class':'form-label'}}) }}
            </div>
            <div class="col-10">
                {{ form_widget(form.description, {'attr': {'class': 'form-control form-control-sm'}}) }}
            </div>
        </div>
    </div>
</div>

<button class="btn btn-sm btn-primary">{{ button_label|default('Ajouter') }}</button>
{{ form_rest(form) }}
{{ form_end(form) }}
