{% extends 'admin.html.twig' %}

{% block title %}Adhesion index{% endblock %}

{% block content %}
<div class="container-fluid">
    {{ include('gest_app/adhesion/include/_section_content_header.html.twig') }}
    <section id="op_admin_content_body">
        <div class="row g-2">
            <div class="col-2">
                {{ include('gest_app/adhesion/include/_section_content_aside.html.twig') }}
            </div>
            <div class="col-10">
                <div class="card">
                    <div class="card-body">
                        <h4>Liste des adhesions</h4>
                        <p>Créer, Modifier ou supprimer des adhésions</p>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Society</th>
                                    <th>Nom & prénom</th>
                                    <th>Email</th>
                                    <th>Siret</th>
                                    <th>Gerant</th>
                                    <th>UrlWeb</th>
                                    <th>UrlFacebook</th>
                                    <th>UrlInstagram</th>
                                    <th>UrlLinkedin</th>
                                    <th>Envoyé le</th>
                                    <th>actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for adhesion in adhesions %}
                                <tr class="align-middle">
                                    <td>{{ adhesion.society }}</td>
                                    <td>{{ adhesion.firstName }} {{ adhesion.lastName }}</td>
                                    <td>{{ adhesion.email }}</td>
                                    <td>{{ adhesion.siret }}</td>
                                    <td>{{ adhesion.gerantFirstname }} {{ adhesion.gerantLastName }}</td>
                                    <td>{{ adhesion.urlWeb }}</td>
                                    <td>{{ adhesion.urlFacebook }}</td>
                                    <td>{{ adhesion.urlInstagram }}</td>
                                    <td>{{ adhesion.urlLinkedin }}</td>
                                    <td>{{ adhesion.createdAt ? adhesion.createdAt|format_datetime('medium', 'none', locale='fr') : '' }}</td>
                                    <td>
                                        <a href="{{ path('op_gestapp_adhesion_show', {'id': adhesion.id}) }}">show</a>
                                        <a href="{{ path('op_gestapp_adhesion_edit', {'id': adhesion.id}) }}">edit</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="11">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}
