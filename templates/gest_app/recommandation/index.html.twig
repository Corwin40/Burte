{% extends 'admin.html.twig' %}

{% block title %}Recommandation index{% endblock %}

{% block content %}
<div class="container-fluid">
    {{ include('gest_app/recommandation/include/_section_content_header.html.twig') }}
    <section id="op_admin_content_body">
        <div class="row g-2">
            <div class="col-2">
                {{ include('gest_app/recommandation/include/_section_content_aside.html.twig') }}
            </div>
            <div class="col-10">
                <div class="card">
                    <div class="card-body">
                        <h4>Catalogue des recommandations</h4>
                        <p>Créer, Modifier ou supprimer des recommandations du site.</p>
                        <div class="row">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Client</th>
                                        <th>Addresse</th>
                                        <th>Contacts</th>
                                        <th>RecoPrice</th>
                                        <th>RecoState</th>
                                        <th>CreatedAt</th>
                                        <th>UpdatedAt</th>
                                        <th>actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for recommandation in recommandations %}
                                    <tr>
                                        <td>{{ recommandation.id }}</td>
                                        <td>{{ recommandation.name }}</td>
                                        <td>{{ recommandation.description }}</td>
                                        <td>{{ recommandation.clientFirstname }} {{ recommandation.clientLastname }}</td>
                                        <td>
                                            {{ recommandation.clientAddress }}<br>
                                            {{ recommandation.clientComplement }}<br>
                                            {{ recommandation.clientZipcode }} {{ recommandation.clientCity }}
                                        </td>
                                        <td>
                                            {{ recommandation.ClientEmail }}<br>
                                            {{ recommandation.ClientDesk }}<br>
                                            {{ recommandation.clientGsm }}
                                        </td>
                                        <td>
                                            {% if recommandation.recoPrice %}Non déterminé{% else %}{{ recommandation.recoPrice }}{% endif %}</td>
                                        <td>{{ recommandation.recoState }}</td>
                                        <td>{{ recommandation.CreatedAt ? recommandation.CreatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                        <td>{{ recommandation.updatedAt ? recommandation.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                        <td>
                                            <a href="{{ path('op_gestapp_recommandation_show', {'id': recommandation.id}) }}">show</a>
                                            <a href="{{ path('op_gestapp_recommandation_edit', {'id': recommandation.id}) }}">edit</a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="18">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-sm btn-secondary" href="{{ path('op_gestapp_recommandation_index') }}">Retour à la liste des recommandations</a>
                        <a class="btn btn-sm btn-primary" href="{{ path('op_gestapp_recommandation_new') }}">Ajouter une recommandation</a>
                    </div>
                </div>
            </div>
            <!-- TOAST Bootstrap 5-->
            <div id="toaster" role="alert" aria-live="assertive" aria-atomic="true" class="toast" data-bs-autohide="false">
                <div class="toast-header">
                    <img src="..." class="rounded me-2" alt="...">
                    <strong class="me-auto">Bootstrap</strong>
                    <small>11 mins ago</small>
                    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body">
                    Hello, world! This is a toast message.
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}
