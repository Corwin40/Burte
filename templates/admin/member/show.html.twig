{% block content %}
<div class="container-fluid">
    {{ include('admin/member/include/_section_content_header.html.twig') }}
    <section id="op_admin_content_body">
        <div class="row g-2">
            <div class="col-2">
                {{ include('admin/member/include/_section_content_aside.html.twig') }}
            </div>
            <div class="col-10">
                <div class="card">
                    <div class="card-body">
                        <h4>Profil de : {{ member.firstName }} {{ member.lastName }}</h4>
                        <p>Sur cette page vous pouvez voir et modifier les informations vous concernant.</p>
                        <div class="row">
                            <div class="col-2">
                                {% if member.avatarName is null %}
                                <img class="img-fluid" src="{{ asset('images/svg/user.svg') }}" alt="sans_avatar">
                                {% else %}
                                <img class="img-fluid" src="{{ vich_uploader_asset(member) }}" alt="{{ member.avatarName }}">
                                {% endif %}
                            </div>
                            <div class="col-4">
                                <table class="table">
                                    <tbody class="align-middle">
                                    <tr>
                                        <th>Identifiant</th>
                                        <td>{{ member.username }}</td>
                                    </tr>
                                    <tr>
                                        <th>Prénom & Nom</th>
                                        <td>{{ member.firstName }} {{ member.lastName }}</td>
                                    </tr>
                                    <tr>
                                        <th>Email</th>
                                        <td>{{ member.email }}</td>
                                    </tr>
                                    <tr>
                                        <th>Roles</th>
                                        <td>{{ member.roles ? member.roles|json_encode : '' }}</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-3">
                                <table class="table">
                                    <tbody>
                                    <tr>
                                        <th>Adresse</th>
                                        <td>
                                            {{ member.adress1 }}<br>{{ member.Adress2 }}<br>{{ member.zipcode }} {{ member.city }}
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Contacts</th>
                                        <td>{{ member.phoneDesk }} / {{ member.phoneGsm }}</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-3">
                                <table class="table">
                                    <tbody>
                                    <tr>
                                        <th>CreatedAt</th>
                                        <td>{{ member.createdAt ? member.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                    </tr>
                                    <tr>
                                        <th>UpdatedAt</th>
                                        <td>{{ member.updatedAt ? member.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                    </tr>
                                    <tr>
                                        <th>IsVerified</th>
                                        <td>{{ member.isVerified ? 'Yes' : 'No' }}</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        {% if member.structure is null %}
                            {{ render(controller('App\\Controller\\Admin\\StructureController::new', {'idmembre': member.id})) }}
                        {% else %}
                            {{ render(controller('App\\Controller\\Admin\\StructureController::edit', {'id': member.structure})) }}
                        {% endif %}
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-secondary btn-sm" href="{{ path('op_admin_member_index') }}">Retour à la liste</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}
