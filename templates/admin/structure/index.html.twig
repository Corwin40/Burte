{% extends 'admin.html.twig' %}

{% block title %}Structure index{% endblock %}

{% block content %}
<div class="container-fluid">
    {{ include('admin/structure/include/_section_content_header.html.twig') }}
    <section id="op_admin_content_body">
        <div class="row g-2">
            <div class="col-2">
                {{ include('admin/structure/include/_section_content_aside.html.twig') }}
            </div>
            <div class="col-10">
                <div class="card">
                    <div class="card-body">
                        <h4>Liste des strucutre : Entreprise, société, ...</h4>
                        <p>Créer, Modifier ou supprimer des membre du site.</p>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Structure</th>
                                    <th>RespFirstName</th>
                                    <th>RespLastName</th>
                                    <th>Address</th>
                                    <th>UrlWeb</th>
                                    <th>EmailStruct</th>
                                    <th>PhoneDesk</th>
                                    <th>PhoneGsm</th>
                                    <th>CreatedAt</th>
                                    <th>UpdatedAt</th>
                                    <th>actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for structure in structures %}
                                <tr>
                                    <td>{{ structure.name }}</td>
                                    <td>{{ structure.respFirstName }}</td>
                                    <td>{{ structure.respLastName }}</td>
                                    <td>
                                        {{ structure.address }}<br>
                                        {{ structure.complement }}<br>
                                        {{ structure.zipcode }} {{ structure.city }}
                                    </td>
                                    <td>{{ structure.urlWeb }}</td>
                                    <td>{{ structure.EmailStruct }}</td>
                                    <td>{{ structure.phoneDesk }}</td>
                                    <td>{{ structure.phoneGsm }}</td>
                                    <td>{{ structure.createdAt ? structure.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                    <td>{{ structure.updatedAt ? structure.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                    <td>
                                        <a href="{{ path('op_admin_structure_show', {'id': structure.id}) }}">show</a>
                                        <a href="{{ path('op_admin_structure_edit', {'id': structure.id}) }}">edit</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="11">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer">
                        <a href="{{ path('op_admin_structure_new2') }}">Create new</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


{% endblock %}
